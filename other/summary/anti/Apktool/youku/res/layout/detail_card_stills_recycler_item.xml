<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/left_blank" android:layout_width="@dimen/detail_card_stills_card_item_margin_left" android:layout_height="fill_parent" android:src="#ffffffff" />
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/detail_card_stills_card_image_margin_left_right" android:layout_marginRight="@dimen/detail_card_stills_card_image_margin_left_right" android:layout_toRightOf="@id/left_blank">
        <RelativeLayout android:id="@id/layout_special_image" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <FrameLayout android:id="@id/layout_bofang_image" android:background="@drawable/imagelayout_corners_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:layout_width="@dimen/icon_default_width" android:layout_height="@dimen/icon_default_width" android:src="@drawable/channel_not_loaded_icon_play" />
                <ImageView android:id="@id/video_image" android:layout_width="@dimen/detail_card_stills_card_item_image_size" android:layout_height="@dimen/detail_card_stills_card_item_image_size" android:scaleType="centerCrop" android:minWidth="@dimen/detail_card_stills_card_item_image_size" android:minHeight="@dimen/detail_card_stills_card_item_image_size" />
                <ImageView android:layout_width="@dimen/detail_card_stills_card_item_image_size" android:layout_height="@dimen/detail_card_stills_card_item_image_size" android:src="@drawable/douban_img_default" android:scaleType="fitXY" />
            </FrameLayout>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignBottom="@id/layout_bofang_image">
                <ImageView android:background="@drawable/detail_mengceng_video_core" android:layout_width="@dimen/detail_card_stills_card_item_image_size" android:layout_height="@dimen/detail_card_stills_card_mengceng_height" android:scaleType="centerCrop" android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </RelativeLayout>
        <TextView android:textSize="@dimen/detail_card_stills_card_text_size" android:textColor="@color/detail_card_stills_series_round_color" android:id="@id/seriesText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/detail_card_stills_card_series_text_margin_left_bottom" android:layout_marginBottom="@dimen/detail_card_stills_card_series_text_margin_left_bottom" android:layout_alignLeft="@id/layout_special_image" android:layout_alignBottom="@id/layout_special_image" />
    </RelativeLayout>
</RelativeLayout>