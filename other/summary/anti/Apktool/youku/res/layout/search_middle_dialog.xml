<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="#e0000000" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@id/install_uc_layout" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="@dimen/search_middle_height">
            <TextView android:textSize="@dimen/search_middle_txt_size" android:textColor="#ff333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="极速播放" android:layout_centerInParent="true" />
            <View android:background="#ffebebeb" android:layout_width="fill_parent" android:layout_height="@dimen/search_middle_split" android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/webview_open_layout" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="@dimen/search_middle_height">
            <TextView android:textSize="@dimen/search_middle_txt_size" android:textColor="#ff333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="网页播放" android:layout_centerInParent="true" />
            <View android:background="#ffebebeb" android:layout_width="fill_parent" android:layout_height="@dimen/search_middle_split" android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/cancel_layout" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="@dimen/search_middle_height">
            <TextView android:textSize="@dimen/search_middle_txt_size" android:textColor="#ff333333" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="取消" android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>