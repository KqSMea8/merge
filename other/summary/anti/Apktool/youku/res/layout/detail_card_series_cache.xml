<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center_vertical" android:id="@id/cache_base_view" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="@dimen/detail_card_series_series_full_title_height_v5">
        <LinearLayout android:gravity="center_vertical" android:id="@id/back_view" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/detail_card_series_cache_setting_margin_left_v5" android:layout_toLeftOf="@id/down_list" android:layout_alignParentLeft="true">
            <ImageView android:layout_gravity="center_vertical" android:id="@id/back" android:background="@null" android:layout_width="@dimen/detail_card_series_full_back_width_v5" android:layout_height="@dimen/detail_card_series_full_back_width_v5" android:src="@drawable/detail_card_video_back" />
            <TextView android:textSize="@dimen/detail_card_title_size_v5" android:textColor="#ff444444" android:gravity="center_vertical" android:id="@id/back_text" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/detail_card_series_cache_line_margin_left" android:text="缓存" />
            <ImageView android:id="@id/detail_cache_oppo_ad_icon_iv" android:layout_width="@dimen/detail_cache_oppo_ad_icon_layout_width" android:layout_height="@dimen/detail_cache_oppo_ad_icon_layout_height" android:layout_marginLeft="@dimen/detail_cache_oppo_ad_icon_layout_marginleft" android:src="@drawable/detail_cache_oppo_ad_icon" />
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@id/setting" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginRight="@dimen/detail_card_series_cache_setting_marginRight_v5" android:layout_alignParentRight="true">
            <TextView android:textSize="@dimen/detail_card_series_cache_setting_text_size_v5" android:textColor="#ff666666" android:gravity="center_vertical" android:id="@id/setting_text" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginRight="@dimen/detail_card_series_cache_setting_text_margin_left_v5" android:text="高清" />
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/xiala" />
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@id/down_list" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginRight="@dimen/detail_card_series_cache_list_icon_margin_right_v5" android:layout_toLeftOf="@id/setting">
            <ImageView android:background="@drawable/xiazailiebiao" android:layout_width="@dimen/detail_card_series_cache_icon_width_v5" android:layout_height="@dimen/detail_card_series_cache_icon_width_v5" />
        </LinearLayout>
    </RelativeLayout>
    <View android:background="#ffe5e5e5" android:layout_width="fill_parent" android:layout_height="1.0px" />
    <RelativeLayout android:orientation="vertical" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <GridView android:gravity="center" android:id="@id/detail_gv_series" android:background="@android:color/transparent" android:scrollbars="none" android:fadingEdgeLength="@dimen/detail_boder" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/select_videos_view" />
        <ListView android:id="@id/detail_gv_series_list" android:background="@android:color/transparent" android:scrollbars="none" android:fadingEdgeLength="@dimen/detail_boder" android:layout_width="fill_parent" android:layout_height="fill_parent" android:divider="#fff2f2f2" android:dividerHeight="1.0px" android:layout_above="@id/select_videos_view" />
        <LinearLayout android:orientation="horizontal" android:id="@id/select_videos_view" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="@dimen/detail_card_series_cache_select_videos_height_v5" android:layout_alignParentBottom="true">
            <RelativeLayout android:id="@id/select_videos" android:background="@color/white" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/detail_card_series_cache_select_videos_height_v5" android:layout_alignParentBottom="true">
                <View android:id="@id/top_line" android:background="#fff0f0f0" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_alignParentTop="true" />
                <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:weightSum="2.0" android:layout_below="@id/top_line">
                    <Button android:textSize="@dimen/detail_card_series_cache_cache_text_size_v5" android:textColor="@color/series_cache_card_grid_select_button_bg" android:gravity="center" android:layout_gravity="center" android:id="@id/cancel_tv" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="取消" android:layout_weight="1.0" />
                    <TextView android:id="@id/center_line" android:background="#fff0f0f0" android:paddingTop="@dimen/detail_card_series_cache_line_layout_marginTop" android:paddingBottom="@dimen/detail_card_series_cache_line_layout_marginTop" android:layout_width="1.0px" android:layout_height="fill_parent" />
                    <Button android:textSize="@dimen/detail_card_series_cache_cache_text_size_v5" android:textColor="@color/play_state_tip_definition_color" android:gravity="center" android:layout_gravity="center" android:id="@id/select_videos_count" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="确定缓存" android:layout_weight="1.0" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@id/select_all_videos" android:background="@color/white" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="@dimen/detail_card_series_cache_select_videos_height_v5" android:layout_alignParentBottom="true">
                <View android:id="@id/top_line2" android:background="#fff0f0f0" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_alignParentTop="true" />
                <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:weightSum="2.0" android:layout_below="@id/top_line2">
                    <Button android:textSize="@dimen/detail_card_series_cache_cache_text_size_v5" android:textColor="@color/series_cache_card_grid_select_button_bg" android:gravity="center" android:layout_gravity="center" android:id="@id/select_all_tv" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="全选" android:layout_weight="1.0" />
                    <TextView android:id="@id/center_line2" android:background="#fff0f0f0" android:paddingTop="@dimen/detail_card_series_cache_line_layout_marginTop" android:paddingBottom="@dimen/detail_card_series_cache_line_layout_marginTop" android:layout_width="1.0px" android:layout_height="fill_parent" />
                    <Button android:textSize="@dimen/detail_card_series_cache_cache_text_size_v5" android:textColor="@color/play_state_tip_definition_color" android:gravity="center" android:layout_gravity="center" android:id="@id/downloaded_video" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="查看缓存" android:layout_weight="1.0" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <include android:id="@id/layout_no_result" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerInParent="true" layout="@layout/detail_card_no_result" />
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/loadingview" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/detail_card_loading_height" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
            <ProgressBar android:layout_width="@dimen/detail_card_loading_width" android:layout_height="@dimen/detail_card_loading_width" android:indeterminateDrawable="@drawable/series_loading_progressbar" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>